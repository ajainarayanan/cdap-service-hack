{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "strict": 0,
    "no-unused-vars": [2, {"vars": "local"}],
    "semi": 2,
    "no-console": 0,
    "babel/new-cap": 0,
    "babel/object-curly-spacing": 0,
    "babel/object-shorthand": 0,
    "babel/arrow-parens": 0,
    "babel/no-await-in-loop": 1
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "angular": false,
    "PKG": true,
    "getAbsUIUrl": true,
    "_": true,
    "describe": true,
    "it": true,
    "expect": true,
    "jest": true,
    "beforeEach": true,
    "afterEach": true,
    "avsc": true
  },
  "plugins": ["react", "babel"],
  "extends": ["eslint:recommended", "plugin:react/recommended"]
}
